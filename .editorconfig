# EditorConfig: https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.py]
indent_size = 4
quote_type = single

[*.{js,json,html,css,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

# Исключения
[.venv/**]
disabled = true

[venv/**]
disabled = true

[migrations/**]
disabled = true

[__pycache__/**]
disabled = true

[static/**]
disabled = true

[templates/**]
disabled = true

[media/**]
disabled = true